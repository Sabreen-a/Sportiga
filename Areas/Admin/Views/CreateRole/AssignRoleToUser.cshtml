@model Sportiga.ViewModelComponant.UserRoleModel;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}
<form asp-action="SaveRole">
    <div>
        <label class="control-label">User Name</label>
        <select asp-for="UserId" asp-items="new SelectList(ViewBag.Users)"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
        <a asp-action="Index">Back to List</a>
    </div>
    <div>
        <label class="control-label">Role Name</label>
        <select asp-for="RoleId" asp-items="new SelectList(ViewBag.Roles)"></select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
        <a asp-action="Index">Back to List</a>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
