
@{
    ViewData["Title"] = "writer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style{
    <style>
        * {
            box-sizing: border-box;
            padding: 0;
            margin: 0;
        }

        .breadcrumb {
            display: flex;
            flex-wrap: wrap;
            padding: .75rem 1rem;
            margin-bottom: 1rem;
            list-style: none;
            background-color: #e9ecef;
            border-radius: 0;
        }

        .rtl .breadcrumb-item + .breadcrumb-item, [dir=rtl] .breadcrumb-item + .breadcrumb-item {
            padding-right: .5rem;
            padding-left: 0;
            color: #6c757d;
            content: "/";
        }

        li {
            display: list-item;
            text-align: -webkit-match-parent;
        }

        .rtl .breadcrumb-item + .breadcrumb-item::before, [dir=rtl] .breadcrumb-item + .breadcrumb-item::before {
            padding-right: 0;
            padding-left: .5rem;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            display: inline-block;
            padding-right: .5rem;
            color: #6c757d;
            content: "/";
        }

        .block .title {
            float: right;
            width: 100%;
            padding: 8px 10px;
            position: relative;
            padding-right: 25px;
        }

            .block .title:after {
                content: "";
                position: absolute;
                right: 0;
                width: 100%;
                top: 48%;
                height: 2px;
                background: linear-gradient(to right,#3B4764 0%,#293144 100%);
            }

        .content {
            float: right;
            width: 100%;
            padding: 5px;
            padding-top: 10px;
        }

        .item-card {
            float: right;
            width: 100%;
            position: relative;
            background: #fff;
            margin-bottom: 10px;
        }

        .content-img {
            float: right;
            width: 100%;
            overflow: hidden;
            border-radius: 5px;
            box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 8%);
            position: relative;
            display: block;
            z-index: 1;
            height: 250px;
        }

            .content-img img {
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                width: 100%;
                height: 100%;
                -o-object-fit: cover;
                object-fit: cover;
            }

        .content-text {
            float: right;
            width: 100%;
            padding: 10px;
        }

            .content-text h3 {
                float: right;
                width: 100%;
                color: #000;
                overflow: hidden;
                font-size: 16px;
                line-height: 23px;
                margin: 0;
                padding: 0;
                height: 69px;
                text-align: right
            }

        .item-li {
            margin-bottom: 10px;
            float: right;
            width: 100%;
            margin-bottom: 10px;
            background: #fff;
            height: 75px
        }

            .item-li .content-text {
                padding-top: 0;
                padding-bottom: 0;
                width: 65%;
                height: 80px;
            }

            .item-li .content-img {
                width: 35%;
                height: 100%;
            }

        .content-img.ss {
            height: 100px;
        }
    </style>
}

<section class="cat-nav">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" title="">الرئيسية</a></li>
            <li class="breadcrumb-item active" aria-current="page"> @ViewBag.username</li>
        </ol>
    </div>
</section>

<section class="articles">
    <div class="container">
        <div class="block">
            <div class="title">
                <a href="" title="@ViewBag.username"><h2>@ViewBag.category</h2></a>
            </div>
            <div class="content">
                <div class="row">
                    @foreach (var item in ViewBag.Articles)
                    {
                            <div class="col-sm-6 col-md-4">
                                <div class="item-card">
                                    <a href="/Home/essay/@item.ID">
                                        <div class="content-img ss">
                                            <img class=" lazyloaded" src="~/images/@item.Image" data-src="~/images/@item.Image" width="740" height="416" alt="@item.Title">
                                        </div>
                                        <div class="content-text">
                                            <h3>@item.Title</h3>
                                        </div>
                                    </a>
                                </div>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
